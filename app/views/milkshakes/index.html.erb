<div class="container">
  <h1>Welcome</h1>
  <div class="cards">
    <% @milkshakes.each do |milkshake| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path milkshake.photo.key, crop: :fill %>')">
      <%= link_to milkshake.name, milkshake_path(milkshake) %>
    </div>
    <% end %>
  </div>
</div>


  